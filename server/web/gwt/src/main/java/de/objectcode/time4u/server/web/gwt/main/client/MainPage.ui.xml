<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:tm="urn:import:de.objectcode.time4u.server.web.gwt.main.client.ui"
	xmlns:tu="urn:import:de.objectcode.time4u.server.web.gwt.utils.client.ui">

	<g:DockLayoutPanel unit="EM">
		<g:north size="2">
			<g:MenuBar ui:field="mainMenu">
			</g:MenuBar>
		</g:north>
		<g:center>
			<g:SplitLayoutPanel>
				<g:west size="300">
					<g:SplitLayoutPanel>
						<g:north size="200">
							<tm:ProjectTree />
						</g:north>
						<g:center>
							<tm:TaskList />
						</g:center>
						<g:south size="200">
							<tm:CalendarView />
						</g:south>
					</g:SplitLayoutPanel>
				</g:west>
				<g:center>
					<tm:WorkItemList />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>