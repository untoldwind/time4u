<assembly>
	<formats>
		<format>tar.bz2</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory></outputDirectory>
			<excludes>
				<exclude>run.sh</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/scripts/run.sh</source>
			<outputDirectory></outputDirectory>
			<fileMode>755</fileMode>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputFileNameMapping>
				${artifact.artifactId}_${artifact.version}.${artifact.extension}
			</outputFileNameMapping>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>de.objectcode.time4u.migrator:time4u-migrator-server05</include>
				<include>de.objectcode.time4u.server:time4u-server-entities</include>
				<include>de.objectcode.time4u.server:time4u-server-api</include>
				<include>javax.xml.bind:jaxb-api</include>
				<include>javax.persistence:persistence-api</include>
				<include>javax.transaction:jta</include>
				<include>commons-logging:commons-logging</include>
				<include>commons-collections:commons-collections</include>
				<include>mysql:mysql-connector-java</include>
				<include>org.hibernate:hibernate</include>
				<include>org.hibernate:hibernate-annotations</include>
				<include>dom4j:dom4j</include>
				<include>asm:asm</include>
				<include>asm:asm-attrs</include>
				<include>cglib:cglib</include>
				<include>log4j:log4j</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>